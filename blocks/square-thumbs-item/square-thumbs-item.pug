mixin square-thumb-item(link='#', img='static/square-thumbs-item/default.jpg', title='lorem ipsum', subtitle='dolor sit amet')
  div.square-thumbs-item(data-img=img).hover-overlay
    div.square-thumbs-item__description-background.hover-overlay__background
    div.square-thumbs-item__description.hover-overlay__container
      h2.square-thumbs-item__title= title
      h3.square-thumbs-item__subtitle= subtitle
      div.square-thumbs-item__space
      a.arrow-button.square-thumbs-item__button(href=link)